<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!--    Create helloSpring bean, wo don't need set this one anymore, injection;-->
    <bean id="helloSpring" class="com.yinom.pdd.spring.service.HelloSpring"/>
    <bean id="job" class="com.yinom.pdd.spring.ioc.Job">
        <property name="tester" ref="lida"/>
    </bean>
    <bean id="zhangming" class="com.yinom.pdd.spring.ioc.Zhangming"/>
    <bean id="lida" class="com.yinom.pdd.spring.ioc.Lida"/>


    <!--properties DI-->
    <bean id="employee1" class="com.yinom.pdd.spring.model.Employee">
        <property name="id" value="1"/>
        <property name="name" value="Tom"/>
        <property name="salary" value="1000"/>
    </bean>

    <!--Constructor Type DI-->
    <bean name="employee2" class="com.yinom.pdd.spring.model.Employee">
        <constructor-arg type="int" value="2"/>
        <constructor-arg type="java.lang.String" value="Aslk"/>
        <constructor-arg type="double" value="1231"/>
    </bean>

    <!--Constructor Index DI-->
    <bean name="employee3" class="com.yinom.pdd.spring.model.Employee">
        <constructor-arg index="0" value="3"/>
        <constructor-arg index="1" value="BAsasdflk"/>
        <constructor-arg index="2" value="2331"/>
    </bean>

    <!--Constructor Mix DI-->
    <bean name="employee4" class="com.yinom.pdd.spring.model.Employee">
        <constructor-arg index="0" value="4"/>
        <constructor-arg index="1" type="java.lang.String" value="TCas"/>
        <constructor-arg index="2" value="45331"/>
    </bean>


    <!--Factory instance DI-->
    <bean id="employeeFactory" class="com.yinom.pdd.spring.factory.EmployeeFactory"/>
    <bean id="employee5" class="com.yinom.pdd.spring.model.Employee" factory-bean="employeeFactory"
          factory-method="createEmployee"/>

    <!--    Static Factory DI-->
    <bean id="employee6" class="com.yinom.pdd.spring.factory.EmployeeFactory" factory-method="createEmployeeStatic"/>

    <!--    bean injection-->
    <bean id="department" class="com.yinom.pdd.spring.model.Department">
        <property name="id" value="1"/>
        <property name="name" value="Finance"/>
    </bean>
    <bean id="employee7" class="com.yinom.pdd.spring.model.Employee">
        <property name="id" value="7"/>
        <property name="name" value="Kim"/>
        <property name="salary" value="8000"/>
        <property name="department" ref="department"/>
    </bean>


    <!-- Internal bean-->
    <bean id="employee8" class="com.yinom.pdd.spring.model.Employee">
        <property name="id" value="8"/>
        <property name="name" value="Oks"/>
        <property name="salary" value="9000"/>
        <property name="department">
            <bean id="department" class="com.yinom.pdd.spring.model.Department">
                <property name="id" value="2"/>
                <property name="name" value="Research"/>
            </bean>
        </property>
    </bean>


    <!-- Collection DI-->
    <!--List parameter DI-->
    <bean id="employee9" class="com.yinom.pdd.spring.model.Employee">
        <property name="id" value="97"/>
        <property name="name" value="Ils"/>
        <property name="salary" value="23000"/>
        <property name="department" ref="department"/>
        <property name="interests">
            <list>
                <value>Sport</value>
                <value>Money</value>
                <value>Sing</value>
            </list>
        </property>
    </bean>

    <!--Set parameter DI-->
    <bean id="employee10" class="com.yinom.pdd.spring.model.Employee">
        <property name="id" value="10"/>
        <property name="name" value="Ils"/>
        <property name="salary" value="300"/>
        <property name="department" ref="department"/>
        <property name="hobbies">
            <set>
                <value>Game</value>
                <value>Money</value>
                <value>Sing</value>
            </set>
        </property>
    </bean>

    <!--Set parameter DI-->
    <bean id="employee11" class="com.yinom.pdd.spring.model.Employee">
        <property name="id" value="11"/>
        <property name="name" value="Ola"/>
        <property name="salary" value="500"/>
        <property name="department" ref="department"/>
        <property name="favorites">
            <map>
                <entry>
                    <key>
                        <value>1</value>
                    </key>
                    <value>Music</value>
                </entry>
                <entry>
                    <key>
                        <value>2</value>
                    </key>
                    <value>Sleep</value>
                </entry>
                <entry>
                    <key>
                        <value>3</value>
                    </key>
                    <value>Money</value>
                </entry>
            </map>
        </property>
    </bean>
</beans>